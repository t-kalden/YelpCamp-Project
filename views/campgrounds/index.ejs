<% layout('layout/boilerplate') %> 

<h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>

    <!-- LOOP OVER CAMPGROUNDS PASSED IN FROM app.js TO DISPLAY -->
    <% for(let campground of campgrounds) {%> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.images[0].url %> " alt="<%= campground.title %> style="max-height: 200px;" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title">
                            <h5><%= campground.title %> </h5>
                            <p class="card-text"><%= campground.text %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.description %></small>    
                            </p>
                            <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 
