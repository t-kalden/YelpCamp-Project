<% layout('layout/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center mt-3 mb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.pexels.com/photos/2398220/pexels-photo-2398220.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label"for="username" >Username</label>
                            <input class="form-control" type="text" autofocus id="username" name="username" required >
                        </div>
                        <div class="mb-3">
                            <label class="form-label"for="email">E-mail</label>
                            <input class="form-control" type="email" id="email" name="email" required >
                        </div>
                        <div class="mb-3">
                            <label class="form-label"for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required >
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
